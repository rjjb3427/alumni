<!DOCTYPE html>
<html class="<%= "#{params[:controller]}-#{params[:action]}".gsub('/', '_') %>">
<head>
  <title><%= yield(:title) || "Le Wagon - Alumni" %></title>
  <meta name="description" content="<%= (yield(:description) || "").squish %>">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= stylesheet_link_tag :application, media: "all" %>
  <%= csrf_meta_tags %>

  <%= render 'shared/meta/twitter' %>
  <%= render 'shared/meta/open_graph' %>
  <%= yield(:other_meta) %>

  <link rel="icon" href="<%= image_path 'favicon.png' %>" type="image/png" />

  <link rel="apple-touch-icon" sizes="57x57" href="<%= image_path 'favicons/apple-touch-icon-57x57.png' %>">
  <link rel="apple-touch-icon" sizes="60x60" href="<%= image_path 'favicons/apple-touch-icon-60x60.png' %>">
  <link rel="apple-touch-icon" sizes="72x72" href="<%= image_path 'favicons/apple-touch-icon-72x72.png' %>">
  <link rel="apple-touch-icon" sizes="76x76" href="<%= image_path 'favicons/apple-touch-icon-76x76.png' %>">
  <link rel="apple-touch-icon" sizes="114x114" href="<%= image_path 'favicons/apple-touch-icon-114x114.png' %>">
  <link rel="apple-touch-icon" sizes="120x120" href="<%= image_path 'favicons/apple-touch-icon-120x120.png' %>">
  <link rel="apple-touch-icon" sizes="144x144" href="<%= image_path 'favicons/apple-touch-icon-144x144.png' %>">
  <link rel="apple-touch-icon" sizes="152x152" href="<%= image_path 'favicons/apple-touch-icon-152x152.png' %>">
  <link rel="apple-touch-icon" sizes="180x180" href="<%= image_path 'favicons/apple-touch-icon-180x180.png' %>">
  <meta name="theme-color" content="#ffffff">
</head>
<body>
  <%= render "shared/flashes" %>
  <%= render "shared/navbar" %>
  <%= react_component 'ModalSignIn', {
      github_url: user_github_omniauth_authorize_path
    }, {class: 'modal-sign-in-container'} %>

  <%= yield %>

  <%= javascript_include_tag :application %>
  <%= cloudinary_js_config %>
  <%= yield(:after_js) %>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-39720822-11', 'auto');
    ga('send', 'pageview');

  </script>

</body>
</html>

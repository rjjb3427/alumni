<%= simple_form_for(resource)do |f|%>
  <row class="post-submissions-row-in">
    <%= f.input :slug, :label => "<i class='mdi mdi-format-text'></i> Slug".html_safe, placeholder: '3' %>
  </row>
  <row class="post-submissions-row-in">
    <%= f.input :starts_at %>
  </row>
  <row class="post-submissions-row-in">
    <%= f.input :onboarding %>
  </row>
  <div class="text-center">
    <%= f.submit 'Submit', class: 'button button-success' %>
  </div>
<% end %>
